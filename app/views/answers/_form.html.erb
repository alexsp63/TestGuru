<%= form_with model: [@question, @answer] do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_area :title, id: :answer_title, rows: 7, cols: 60 %>
  </div>

  <div>
    <%= form.label :correct %><br>
    <%= form.check_box :correct, id: :answer_correct %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
