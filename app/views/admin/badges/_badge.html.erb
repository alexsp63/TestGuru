<tr>
  <td class="align-middle"><%= badge.title %></td>
  <td class="align-middle">
    <%= image_tag badge.image_url, class: 'badge-image' do %>
    <% end %>
  </td>
  <td class="align-middle"><%= badge.description %></td>
  <td class="align-middle"><%= link_to 'Edit', edit_admin_badge_path(badge) %></td>
  <td class="align-middle"><%= link_to 'Delete', admin_badge_path(badge), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
